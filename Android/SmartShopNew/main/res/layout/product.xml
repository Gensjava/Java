<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/item_products_peger"

              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/item_pager_product"
        android:layout_width="fill_parent"
        android:layout_height="280dp"
        android:background="@android:color/background_light"/>
    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator_item_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_lauout"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/item_text_name_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Наименование товара"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_text_name_pSpase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Код: "/>

        <TextView
            android:id="@+id/item_text_kod"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Код: "
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цена: "/>
        <TextView
            android:id="@+id/item_text_price"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:text="Цена"
            android:textStyle="bold"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/item_text_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_text_full_discription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:text="full discription"
        />

    <TextView
        android:id="@+id/item_view_discription"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.05"
        android:gravity="center"
        android:text="Описание >>"/>

    <TextView
        android:id="@+id/item_text_deliver"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.05"
        android:gravity="center"
        android:text="Доставка >>"/>


</LinearLayout>