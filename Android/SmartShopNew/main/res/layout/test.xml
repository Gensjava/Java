<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="bottom"
              android:orientation="vertical"
              android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/cart_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light"
            android:clickable="false"
            android:divider="@color/main_orange_text"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/main_orange"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:gravity="center|right"
            android:text="Сумма:"
            android:textColor="@color/main_orange_text"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cart_total_sum"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="0.00"
            android:textColor="@color/main_orange_text"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/cart_total_val"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:gravity="center|right"
            android:text=" грн.  "
            android:textColor="@color/main_orange_text"
            android:textSize="20dp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/cart_make_order"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:onClick="onClick"
            android:src="@drawable/ic_action_arrow_right_b"
            android:text="Оформить >>"
            />
    </LinearLayout>


</LinearLayout>