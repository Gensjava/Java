<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:onClick="onClick">

    <LinearLayout android:id="@+id/rootLayout" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">

        <TextView android:id="@+id/TextViewData" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Дата: " />
        <TextView android:id="@+id/TextViewEvent" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Сообщение: " />
        <TextView android:id="@+id/TextViewStatus" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Статус: " />

    </LinearLayout>
</ScrollView>