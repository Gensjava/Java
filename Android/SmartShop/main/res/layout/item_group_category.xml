<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="1">

    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="8"
        android:rowCount="3">

        <ImageView
            android:id="@+id/image_category_view_one"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:layout_row="0"
            android:src="@drawable/flatscreen"/>

        <ImageView
            android:id="@+id/image_category_view_two"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_column="2"
            android:layout_row="0"
            android:src="@drawable/flatscreen"/>

        <ImageView
            android:id="@+id/image_category_view_tree"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_column="4"
            android:layout_row="0"
            android:src="@drawable/flatscreen"/>

        <ImageView
            android:id="@+id/image_category_view_four"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_column="6"
            android:layout_row="0"
            android:src="@drawable/flatscreen"/>

        <ImageView
            android:id="@+id/image_category_view_five"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:layout_row="1"
            android:src="@drawable/flatscreen"/>

        <ImageView
            android:id="@+id/image_category_view_six"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_column="2"
            android:layout_row="1"
            android:src="@drawable/flatscreen"/>

        <ImageView
            android:id="@+id/image_category_view_seven"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_column="4"
            android:layout_row="1"
            android:src="@drawable/flatscreen"/>

        <ImageView
            android:id="@+id/image_category_view_eight"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_column="6"
            android:layout_row="1"
            android:src="@drawable/flatscreen"/>

    </GridLayout>
</LinearLayout>