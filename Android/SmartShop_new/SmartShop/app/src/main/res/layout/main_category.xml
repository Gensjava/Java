<?xml version="1.0" encoding="utf-8"?>
<GridLayout android:id="@+id/GridLayout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="8"
            android:orientation="horizontal"
            android:rowCount="3"
            android:weightSum="1"
    >


    <ImageButton
        android:id="@+id/image_category_view_one"
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:layout_column="0"
        android:adjustViewBounds="true"
        android:focusable="false"
        android:scaleType="center"
        android:src="@drawable/apple"
        />

    <ImageButton
        android:id="@+id/image_category_view_two"
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:layout_column="2"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/ipad"
        />

    <ImageButton
        android:id="@+id/image_category_view_tree"
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:layout_column="4"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/consumer_electronics"
        />

    <ImageButton
        android:id="@+id/image_category_view_four"
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:layout_column="6"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/tv"
        />

    <ImageButton
        android:id="@+id/image_category_view_five"
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:layout_column="0"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/laptop"
        />

    <ImageButton
        android:id="@+id/image_category_view_six"
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:layout_column="2"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/portable_equipment"
        />

    <ImageButton
        android:id="@+id/image_category_view_seven"
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:layout_column="4"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/avto"
        />

    <ImageButton
        android:id="@+id/image_category_view_eight"
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:layout_column="6"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/children"
        />

</GridLayout>